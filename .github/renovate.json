{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:base"
    ],
    "platform": "github",
    "autodiscover": true,
    "packageRules": [
      {
        "lockFileMaintenance": {
          "enabled": true
        }
      }
    ],
    "labels": ["dependencies"],
    "automerge": false,
    "prHourlyLimit": 5,
    "prConcurrentLimit": 10,
    "reviewers": ["owner"]
}